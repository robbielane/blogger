<div class="z-depth-1 comments">
  <h3> Post a comment </h3>

  <%= form_for [ @article, @comment ] do |f| %>
  <div class="row">
    <p class="col s4">
      <%= f.label :author_name, 'Your Name' %><br>
      <%= f.text_field :author_name %>
    </p>
  </div>
    <p>
      <%= f.label :body, 'Your Comment' %><br>
      <%= f.text_area :body, class: "text-area"%>
    </p>
    <p>
      <%= f.submit class: "btn" %>
    </p>
  <% end %>
</div>
